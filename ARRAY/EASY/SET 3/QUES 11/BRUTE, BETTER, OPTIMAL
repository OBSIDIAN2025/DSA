#include<iostream>
using namespace std;

int main (){
    int arr[] = {1, 0, 1, 1, 1, 0, 1, 1};
    int n = 8;
    int maxi = 0, cnt = 0;
    for(int i = 0; i < n; i++)
    {
        if(arr[i] == 1)
        {
            cnt++;
        }
        else
        {
            cnt = 0;
        }
        maxi = max(maxi, cnt);
    }
    cout << "The maximum consecutives of 1's is: " << maxi << endl;
    return 0;
}
